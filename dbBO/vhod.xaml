        </Grid.Background>
        <DataGrid Name ="dg1"  d:ItemsSource="{d:SampleData ItemCount=5}" Margin="400,35,27,35"/>
        <TextBox Name="tb1" HorizontalAlignment="Left" Margin="35,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="30"/>
        <TextBox Name="tb2" HorizontalAlignment="Left" Margin="98,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="261" Height="30"/>
        <Button Content="Добавить номер" HorizontalAlignment="Left" Margin="35,109,0,0" VerticalAlignment="Top" Click="Button_Click" Height="30" Width="324"/>
