        <Label Content="Добавить номер" HorizontalAlignment="Left" Margin="125,29,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="18"/>
        <Label Content="Персональные настройки" HorizontalAlignment="Left" Margin="84,157,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Foreground="White"/>
        <Label Content="Удаление номера" HorizontalAlignment="Left" Margin="115,322,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold" FontSize="18"/>
        <TextBox Name="deln" HorizontalAlignment="Left" Margin="35,361,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="50" Height="30"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="98,361,0,0" VerticalAlignment="Top" Height="30" Width="261" Click="Button_Click_2"/>

    </Grid>
</Window>
       
